{
  "name": "@fabiospampinato/template",
  "description": "A super-simple way to create new projects based on templates.",
  "version": "1.1.5",
  "bin": {
    "template": "dist/bin/index.js",
    "tnt": "dist/bin/index.js"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage .nyc_output",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "compile": "tsup ./src/bin/index.ts --format esm --dts --sourcemap --clean ",
    "compile:watch": "npm run compile --watch",
    "test": "check-export-map && ava",
    "test:watch": "ava --watch",
    "uncompile": "node  --loader tsx --inspect ./src/bin/index.ts",
    "tnt": "node  --loader tsx --inspect ./src/bin/index.ts",
    "coverage": "nyc --reporter=html ava",
    "report": "nyc report",
    "report:html": "open coverage/index.html",
    "prepublishOnly": "npm run clean && npm run compile && npm run coverage"
  },
  "exports": {
    ".": {
      "import": "./dist/"
    },
    "./sdk": {
      "import": "./dist/middleware/"
    },
    "./package.json": "./package.json"
  },
  "ava": {
    "files": [
      "test/handlebars.js",
      "test/repository.js",
      "test/template.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/template/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/template.git"
  },
  "keywords": [
    "template",
    "scaffold",
    "handlebars",
    "cli",
    "simple"
  ],
  "dependencies": {
    "@caporal/core": "^2.0.2",
    "@swc/core": "^1.2.215",
    "@tib/configload": "^0.3.0",
    "absolute": "0.0.1",
    "consolidate": "^0.14.5",
    "del": "^3.0.0",
    "esno": "^0.16.3",
    "fs-finder": "^1.8.1",
    "handlebars": "^4.7.7",
    "inquirer-helpers": "^1.3.5",
    "is-directory": "^0.3.1",
    "is-url": "^1.2.4",
    "isbinaryfile": "^3.0.3",
    "jsox": "^1.2.113",
    "lodash": "^4.17.21",
    "metalsmith": "^2.5.0",
    "multimatch": "^2.1.0",
    "p-series": "^1.1.0",
    "pify": "^3.0.0",
    "specialist": "^0.3.0",
    "ts-mixer": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@eslint/create-config": "^0.3.0",
    "@types/lodash": "^4.14.182",
    "@types/metalsmith": "^2.3.1",
    "@types/node": "^10.17.60",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "ava": "^0.22.0",
    "ava-spec": "^1.1.1",
    "check-export-map": "^1.3.0",
    "esbuild": "^0.14.49",
    "eslint": "^8.19.0",
    "nyc": "^11.9.0",
    "rimraf": "^2.7.1",
    "tsup": "^6.1.3",
    "tsx": "^3.8.0",
    "typescript-transform-export-interop": "^1.0.4"
  }
}
